<div
  style="
    color: {{bodyColor}};
    background-color: {{backgroundColor}};
    cursor: -moz-grab;
    cursor: -webkit-grab;
    cursor: grab;
  "
  class="query_result_item"
  data-idx="{{index}}"
>
  {{!-- SOCIAL IMAGE --}}
  <img
    style="
      border-radius: 3px;
      width: 40px;
      border: 1px solid lightgrey;
      position: absolute;
    "
    src="{{socialCtx.img}}">
  </img>
  <div
    style='
      margin-left: 51px;
      position: relative;
      top: -4px;
    '>
    {{!-- SOCIAL NAME || ANONYMOUS --}}
    <div style='margin: 0px; color: gray; font-size:13px; vertical-align: middle; margin-left: 5px; display: inline-block;'>
      {{#unless socialCtx.anon}}
        <a href="{{socialCtx.link}}">
      {{/unless}}
      <span
        style="
        font-weight: 700;
        ">{{socialCtx.name}}</span>
      {{#unless socialCtx.anon}}
        </a>
      {{/unless}}
      {{!-- WROTE --}}
      <span>
        {{#if tweet_id}}
          <a href="https://twitter.com/{{socialCtx.screen_name}}/status/{{tweet_id}}" target="_blank">{{s.x_tweeted}}</a>
        {{/if}}
      </span>

      {{!-- COMMENT TEXT --}}
      <p style="
        margin:0px;
          {{!-- this is responsible for normalizing the comment heights --}}
          {{!-- min-height: {{commentCarouselMinHeight}}px;  --}}
        ">{{txt}}</p>

      {{!-- PERCENTAGE AND AGREED / DISAGREED --}}
      <p
        class="{{leClass}}"
        style="
          margin: 0px;
          font-size: 35px;
          font-weight: 100;
          ">{{{agreedOrDisagreed}}}
      </p>

      {{!-- OF N PARTICIPANTS IN (GROUP x / CONVERSATION) --}}
      <p style="
        font-size:12px;
        color: gray;
        margin: 0px
        ">
        <em>Of</em>
        <strong>{{total}}</strong>
        <em>participants in {{groupOrConversatonString}}</em>
      </p>

      {{!-- N PARTICIPANTS SAW X COMMENT --}}
      <p style="
        font-size:12px;
        color: gray;
        margin: 0px
        ">
        <strong>{{nTrials}}</strong>
        <em>{{s.xPtptsSawThisComment}}</em>
      </p>
      {{!-- N OF THOSE PARTICIPANTS AGREED / DISAGREED --}}
      <p style="
        font-size:12px;
        color: gray;
        margin: 0px;
        ">
        <strong>{{count}}</strong>
        <em>{{#if repfullForAgree}}{{s.xOfThoseAgreed}}{{else}}{{s.xOfthoseDisagreed}}{{/if}}</em>
      </p>
      {{!-- DATE OF COMMENT --}}
      {{!-- <p style="font-size: 12px; color: gray; margin-bottom: 0px;"><em>Comment submitted {createdString}</em></p> --}}

    </div>
  </div>
</div>
