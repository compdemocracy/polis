<div class="navbar navbar-default logo_and_login_section" role="navigation">
  {{#if authStyleHeader}}
    <div style="text-align: center">
      {{> polisLogo}}
    </div>
  {{else}}
  <div class="
  col-xs-offset-0 col-xs-12
  col-sm-offset-0 col-xs-12
  col-md-offset-0 col-md-12
  col-lg-offset-0 col-lg-12">

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="fa fa-bars"></span>
      </button>
      {{> polisLogo}}
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        {{#ifDefined showNewButton}}
        <li>
          <a href="{{createConversationHref}}" title="Create a new conversation" class="HeadingD"><i class="fa fa-plus-square"> </i> NEW</a>
        </li>
        {{/ifDefined}}

        <li>
          <a href="http://docs.pol.is" class="HeadingD">Docs</a>
        </li>

        <li>
          <a href="http://blog.pol.is" class="HeadingD">Blog</a>
        </li>

        <li class="divider"></li>
        {{#unless hideInboxLink}}
        <li id="inboxLink"><a class="HeadingD" href="{{inboxHref}}"><i class="fa fa-inbox"></i>&nbsp;Inbox</a></li>
        {{/unless}}
        <li class="divider"></li>
        {{#ifAuthenticated}}
            {{!-- <li><a href="{{settings_href}}" class="HeadingD"><i class="fa fa-code"></i>&nbsp;Embed</a></li> --}}
            {{!-- <li><a href="{{settings_href}}" class="HeadingD"><i class="fa fa-cog"></i>&nbsp;Settings</a></li> --}}
            <li class="divider"></li>
            <li><a href="/user/logout/inbox" class="HeadingD">
              {{#ifNotIE8}}
              <i class="fa fa-sign-out"></i>
              {{/ifNotIE8}}
              &nbsp; Signout</a></li>
        {{/ifAuthenticated}}
      </ul>
    </div>{{! /.nav-collapse }}
  </div> {{! /.container }}
  {{/if}} {{! /else !authStyleHeader}}
</div> {{! navbar }}
